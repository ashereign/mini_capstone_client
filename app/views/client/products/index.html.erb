<div>
  <%= form_tag "/client/products", method: :get do %>
  <input type="text" name="search">
  <input type="submit" value="Search a Product">
  <% end %>
  <a href="/client/products/?price_sort=true">Sort by price</a>
</div>
Categories:
<ul>
  <li><a href="/client/products?category=PCs"></a></li>
  <li><a href="/client/products?category=Iot Home"></a></li>
</ul>


 <% @products.each do |product| %>
   <h2><a href="/client/products/<%= product['id']%>"> <%= product['name'] %></a></h2>
   <h3>Price: <%= product['price'] %></h3>
   <h3>Description: <%= product['description'] %></h3>
   <h3>Supplier: <%= product['supplier']['name'] %></h3>
   
   <br> 
<% end %>
